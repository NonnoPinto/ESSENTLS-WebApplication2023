    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.essentls.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/home</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/paymentslist</url-pattern>
        <url-pattern>/membership</url-pattern>
        <url-pattern>/edit-profile</url-pattern>
        <url-pattern>/eventdetail</url-pattern>
        <url-pattern>/joined-events</url-pattern>
        <url-pattern>/confirmEvent</url-pattern>
        <url-pattern>/logout</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>VolunteerFilter</filter-name>
        <filter-class>com.essentls.filter.VolunteerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>VolunteerFilter</filter-name>
        <url-pattern>/search-users</url-pattern>
        <url-pattern>/eventparticipants</url-pattern>
        <url-pattern>/editEvent</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ActiveVolunteerFilter</filter-name>
        <filter-class>com.essentls.filter.ActiveVolunteerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ActiveVolunteerFilter</filter-name>
        <url-pattern>/edit-user</url-pattern>
        <url-pattern>/select-user-by-id</url-pattern>
        <url-pattern>/create-event</url-pattern>
        <url-pattern>/download-user-document</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.essentls.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/cause-create</url-pattern>
        <url-pattern>/cause-search</url-pattern>
        <url-pattern>/tag-search</url-pattern>
        <url-pattern>/rest/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>DenyFilter</filter-name>
        <filter-class>com.essentls.filter.DenyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DenyFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/error</location>
    </error-page>

    <resource-ref>
        <description>Connection pool to the database</description>
        <res-ref-name>jdbc/public</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

